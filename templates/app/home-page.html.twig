{% extends '@layout/default.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}

    <section class="container">
        <div class="col-md-12">
            <form class="form-horizontal" method="post" action="/save">
                <label for="name">Name</label>
                <input type="text" class="input-lg" id="name" name="name"/>
                <input type="submit" class="input-lg" name="save" value="save">
            </form>
        </div>

        <div class="col-md-12"></div>

        <div class="col-md-12">
            <table class="table table-responsive table-bordered">
                <thead>
                <tr>
                    <th class="text-center">
                        #
                    </th>

                    <th class="text-center">
                        name
                    </th>

                    <th class="text-center">
                        data
                    </th>

                    <th class="text-center">
                        createdAt
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for book in books %}
                    <tr>
                        <td class="text-center">
                            {{ book.id }}
                        </td>

                        <td class="text-center">
                            {{ book.name | upper }}
                        </td>

                        <td class="text-center">
                            {{ book.data | raw }}
                        </td>

                        <td class="text-center">
                            {{ book.createdAt.format('Y-m-d') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}
